<odoo>
    <template id="report_invoice_document_custom" inherit_id="account.report_invoice_document">

        <xpath expr="//div[@id='informations']" position="replace">
            <!-- Nothing  -->
        </xpath>

        <xpath expr="//div[@class='page']/h2" position="replace">
            <!-- Nothing  -->
        </xpath>


        <xpath expr="//div[@class='row']" position="replace">
            <div class="row" style="display: flex; justify-content: space-between;">
                <div class="col-8" name="no_shipping">
                    <span>Customer Code: </span>
                    <span class="m-0" t-field="o.partner_id.ref" />
                    <br/>
                    <address class="mb-0" t-field="o.partner_id"
                        t-options='{"widget": "contact", "fields": ["address", "name", "mobile"], "no_marker": True}' />
                    <div t-if="o.partner_id.vat" id="partner_vat_no_shipping">
                        <t t-if="o.company_id.account_fiscal_country_id.vat_label"
                            t-esc="o.company_id.account_fiscal_country_id.vat_label"
                            id="inv_tax_id_label" />
                            <t t-else="">Tax ID</t>: <span
                            t-field="o.partner_id.vat" />
                    </div>
                </div>
                <div class="col-4" name="invoice_information">
                    <span t-if="o.move_type == 'out_invoice' and o.state == 'posted'"><strong>Invoice: </strong></span>
                    <span t-if="o.move_type == 'out_invoice' and o.state == 'draft'"><strong>Draft Invoice: </strong></span>
                    <span t-if="o.move_type == 'out_invoice' and o.state == 'cancel'"><strong>Cancelled Invoice: </strong></span>
                    <span t-if="o.move_type == 'out_refund'">Credit Note</span>
                    <span t-if="o.move_type == 'in_refund'">Vendor Credit Note</span>
                    <span t-if="o.move_type == 'in_invoice'">Vendor Bill</span>
                    <strong><span t-if="o.name != '/'" t-field="o.name" /></strong>
                    <br/>
                    <span t-if="o.move_type == 'out_invoice'">
                        <span>Invoice Date: </span>
                    </span>
                    <span t-elif="o.move_type == 'out_refund'">
                        <span>Credit Note Date: </span>
                    </span>
                    <span t-elif="o.move_type == 'out_receipt'">
                        <span>Receipt Date: </span>
                    </span>
                    <span t-else="">
                        <span>Date: </span>
                    </span>
                    <span class="m-0" t-field="o.invoice_date" />
                    <br />
                    <span>Due Date: </span>
                    <span class="m-0" t-field="o.invoice_date_due" />
                    <br />
                    <span>Source:</span>
                    <span class="m-0" t-field="o.invoice_origin" />
                    <br/>
                    <span>Payment Term:</span>
                    <span class="m-0" t-field="o.invoice_payment_term_id.name" />
                </div>
            </div>
        </xpath>
        <xpath expr="//div[@class='page']/table" position="replace">
            <table class="table table-sm o_main_table table-borderless" name="invoice_line_table">
                <thead>
                    <tr>
                        <th name="th_description" class="text-start">
                            <span>Item Code</span>
                        </th>
                        <th name="th_description" class="text-start">
                            <span>Description</span>
                        </th>
                        <th name="th_quantity" class="text-end">
                            <span>P UOM</span>
                        </th>
                        <th name="th_quantity" class="text-end">
                            <span>S UOM</span>
                        </th>
                        <th name="th_quantity" class="text-end">
                            <span>Quantity</span>
                        </th>
                        <th name="th_priceunit"
                            t-attf-class="text-end {{ 'd-none d-md-table-cell' if report_type == 'html' else '' }}">
                            <span>Unit Price</span>
                        </th>
                        <th name="th_price_unit" t-if="false"
                            t-attf-class="text-end {{ 'd-none d-md-table-cell' if report_type == 'html' else '' }}">
                            <span>Disc.%</span>
                        </th>
                        <th name="th_subtotal" class="text-end">
                            <span groups="account.group_show_line_subtotals_tax_excluded">Amount</span>
                            <span groups="account.group_show_line_subtotals_tax_included">Total
                                Price</span>
                        </th>
                    </tr>
                </thead>
                <tbody class="invoice_tbody">
                    <t t-set="current_subtotal" t-value="0" />
                    <t t-set="lines"
                        t-value="o.invoice_line_ids.sorted(key=lambda l: (-l.sequence, l.date, l.move_name, -l.id), reverse=True)" />

                    <t t-foreach="lines" t-as="line">
                        <t t-set="current_subtotal" t-value="current_subtotal + line.price_subtotal"
                            groups="account.group_show_line_subtotals_tax_excluded" />
                        <t t-set="current_subtotal" t-value="current_subtotal + line.price_total"
                            groups="account.group_show_line_subtotals_tax_included" />

                        <tr
                            t-att-class="'bg-200 fw-bold o_line_section' if line.display_type == 'line_section' else 'fst-italic o_line_note' if line.display_type == 'line_note' else ''">
                            <t t-if="line.display_type == 'product'"
                                name="account_invoice_line_accountable">
                                <!-- Item Code -->
                                <td name="account_invoice_line_name">
                                    <span t-field="line.product_id.default_code"
                                        t-options="{'widget': 'text'}" />
                                </td>
                                <!-- Description -->
                                <td name="account_invoice_line_name">
                                    <span t-field="line.product_id.name"
                                        t-options="{'widget': 'text'}" />
                                </td>
                                <!-- P.UOM -->
                                <td class="text-end">
                                    <span t-field="line.product_id.uom_po_id.name"
                                        groups="uom.group_uom" />
                                </td>
                                <!-- S. UOM -->
                                <td class="text-end">
                                    <span t-field="line.product_uom_id" groups="uom.group_uom" />
                                </td>
                                <!-- Qty -->
                                <td class="text-end">
                                    <span t-field="line.quantity" />
                                </td>
                                <td
                                    t-attf-class="text-end {{ 'd-none d-md-table-cell' if report_type == 'html' else '' }}">
                                    <span class="text-nowrap" t-field="line.price_unit" />
                                </td>
                                <td t-if="false"
                                    t-attf-class="text-end {{ 'd-none d-md-table-cell' if report_type == 'html' else '' }}">
                                    <span class="text-nowrap" t-field="line.discount" />
                                </td>
                                <td class="text-end o_price_total">
                                    <span class="text-nowrap" t-field="line.price_subtotal"
                                        groups="account.group_show_line_subtotals_tax_excluded"
                                        t-options='{"widget": "float", "precision": 2}' />
                                    <span class="text-nowrap" t-field="line.price_total"
                                        groups="account.group_show_line_subtotals_tax_included"
                                        t-options='{"widget": "float", "precision": 2}' />
                                </td>
                            </t>
                            <t t-if="line.display_type == 'line_section'">
                                <td colspan="99">
                                    <span t-field="line.name" t-options="{'widget': 'text'}" />
                                </td>
                                <t t-set="current_section" t-value="line" />
                                <t t-set="current_subtotal" t-value="0" />
                            </t>
                            <t t-if="line.display_type == 'line_note'">
                                <td colspan="99">
                                    <span t-field="line.name" t-options="{'widget': 'text'}" />
                                </td>
                            </t>
                        </tr>

                        <t
                            t-if="current_section and (line_last or lines[line_index+1].display_type == 'line_section')">
                            <tr class="is-subtotal text-end">
                                <td colspan="99">
                                    <strong class="mr16">Subtotal</strong>
                                    <span
                                        t-esc="current_subtotal"
                                        t-options='{"widget": "float", "precision": 2}'
                                    />
                                </td>
                            </tr>
                        </t>
                    </t>
                </tbody>
            </table>
        </xpath>

        <xpath expr="//div[@id='total']" position="replace">
            <div id="total" class="row">
                <div
                    t-attf-class="#{'col-6' if report_type != 'html' else 'col-sm-7 col-md-6'} ms-auto">
                    <div>
                        <p>Total Qty: <t t-esc="sum(line.quantity for line in o.invoice_line_ids)"></t></p>
                    </div>
                    <table class="table table-sm table-borderless" style="page-break-inside: avoid;">
                        <!-- Total Amount Before Discount -->
                        <tr>
                            <td>Total Amount</td>
                            <td class="text-end">
                                <span
                                    t-esc="sum(line.price_unit * line.quantity for line in o.invoice_line_ids)"
                                    t-options='{"widget": "float", "precision": 2}' />
                            </td>
                        </tr>

                        <!-- Total Discount -->
                        <tr>
                            <td>Total Discount</td>
                            <td class="text-end">
                                <t t-set="total_discount"
                                    t-value="sum(line.price_unit * line.discount / 100 * line.quantity for line in o.invoice_line_ids)" />
                                <span t-esc="total_discount"
                                    t-options='{"widget": "float", "precision": 2}' />
                            </td>
                        </tr>

                        <!--Net
                        Amount-->
                        <tr>
                            <td>Net Amount</td>
                            <td class="text-end">
                                <t t-set="net_amount"
                                    t-value="sum(line.price_subtotal for line in o.invoice_line_ids)" />
                                <span t-esc="net_amount"
                                    t-options='{"widget": "float", "precision": 2}' />
                            </td>
                        </tr>

                        <!--Payments-->
                        <t t-if="print_with_payments">
                            <t t-if="o.payment_state != 'invoicing_legacy'">
                                <t t-set="payments_vals"
                                    t-value="o.sudo().invoice_payments_widget and o.sudo().invoice_payments_widget['content'] or []" />
                                <t t-foreach="payments_vals" t-as="payment_vals">
                                    <tr t-if="payment_vals['is_exchange'] == 0">
                                        <td>
                                            <i class="oe_form_field text-end oe_payment_label">Paid
                                                on <t
                                                    t-esc="payment_vals['date']"
                                                    t-options='{"widget": "date"}' /></i>
                                        </td>
                                        <td class="text-end">
                                            <span t-esc="payment_vals['amount']"
                                                t-options='{"widget": "float", "precision": 2}'
                                            />
                                        </td>
                                    </tr>
                                </t>

                                <t t-if="len(payments_vals) > 0">
                                    <tr class="border-black fw-bold">
                                        <td>Amount Due</td>
                                        <td class="text-end">
                                            <span t-field="o.amount_residual"
                                                t-options='{"widget": "float", "precision": 2}' />
                                        </td>
                                    </tr>
                                </t>
                            </t>
                        </t>
                    </table>
                </div>
            </div>
        </xpath>
    </template>
</odoo>
  